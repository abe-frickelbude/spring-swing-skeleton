<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<withJansi>false</withJansi>
		<encoder>
			<pattern>%cyan(%d{HH:mm:ss.SSS}) %yellow([%thread]) %cyan(%-5level) %magenta(%logger{36}) - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="org.rribbit" level="warn" />
	<root level="INFO">
		<appender-ref ref="console" />
	</root>

</configuration>
